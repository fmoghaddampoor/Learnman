@page "/login"
@layout Learnman.Components.Layout.AuthLayout
@inject NavigationManager Navigation

<PageTitle>Login - LinguistAI</PageTitle>

<div class="login-form animate-fade-in">
    <div class="form-group">
        <label>Email</label>
        <input type="email" placeholder="you@example.com" />
    </div>
    
    <div class="form-group">
        <label>Password</label>
        <input type="password" placeholder="••••••••" />
    </div>

    <button class="btn-primary w-100" @onclick="HandleLogin">
        Start Your Journey
    </button>
    
    <div class="mt-4">
        <p class="text-sm">New here? <a href="#" class="text-gradient hover:underline">Create an account</a></p>
    </div>
</div>

<style>
    .form-group {
        text-align: left;
        margin-bottom: 20px;
    }
    
    .form-group label {
        display: block;
        margin-bottom: 8px;
        color: var(--text-secondary);
        font-size: 0.9rem;
    }
    
    .w-100 { width: 100%; }
    .mt-4 { margin-top: 1.5rem; }
    .text-sm { font-size: 0.875rem; }
</style>

@code {
    private void HandleLogin()
    {
        // Mock authentication - proceed to onboarding
        Navigation.NavigateTo("/onboarding");
    }
}
