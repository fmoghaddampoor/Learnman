    }
    
    .modal-actions {
        display: flex;
        gap: 10px;
        justify-content: center;
    }
</style>

@code {
    private List<TutorCharacter> Characters = new();
    private TutorCharacter? SelectedCharacter;
    private List<ChatMessage> Messages = new();
    private string CurrentInput = "";
    private bool IsTyping = false;
    
    private bool FilteredByLanguage = false;
    private string TargetLanguage = "";
    
    private bool ShowApiKeyModal = false;
    private string NewApiKey = "";

    protected override void OnInitialized()
    {
        var allCharacters = AIService.GetCharacters();
        var userLang = AuthService.CurrentUser?.TargetLanguage;
        
        if (!string.IsNullOrEmpty(userLang))
        {
             TargetLanguage = userLang;
             // Ensure 'userLang' matches the case in models (Models use "Italian", "French", etc.)
             Characters = allCharacters.Where(c => c.Language.Equals(userLang, StringComparison.OrdinalIgnoreCase)).ToList();
             FilteredByLanguage = true;
        }
        else 
        {
             Characters = allCharacters;
             FilteredByLanguage = false;
        }
    }

    private void SelectCharacter(TutorCharacter character)
    {
        SelectedCharacter = character;
        Messages.Clear();
        // Initial greeting
        Messages.Add(new ChatMessage { Role = "assistant", Content = $"*looks at you intriguingly* Hello, student. I am {character.Name}. Ready to learn {character.Language}?" });
    }
    
    // (API Key logic removed - using hardcoded ApiSecrets.cs)
    
    private bool _shouldScroll = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (_shouldScroll)
        {
            _shouldScroll = false;
            await JS.InvokeVoidAsync("scrollToBottom", "chat-scroll");
        }
    }

    private async Task Enter(KeyboardEventArgs e)
    {
        if (e.Code == "Enter" || e.Code == "NumpadEnter")
        {
            await SendMessage();
        }
    }

    private async Task SendMessage()
    {
        if (string.IsNullOrWhiteSpace(CurrentInput) || SelectedCharacter == null) return;

        var userMsg = CurrentInput;
        CurrentInput = "";
        
        Messages.Add(new ChatMessage { Role = "user", Content = userMsg });
        
        IsTyping = true;
        _shouldScroll = true; // Scroll for user message
        StateHasChanged();

        var response = await AIService.GetChatResponseAsync(userMsg, SelectedCharacter);
        
        IsTyping = false;
        Messages.Add(new ChatMessage { Role = "assistant", Content = response });
        
        // Trigger TTS (Fire and forget provided UI doesn't block)
        await TTSService.SynthesizeAsync(response, SelectedCharacter.VoiceId);
        
        _shouldScroll = true; // Scroll for bot message
        StateHasChanged();
    }
    
    private string ParseContent(string content)
    {
        if (string.IsNullOrEmpty(content)) return "";

        var sb = new System.Text.StringBuilder(content);
        
        // Common actions to emojis
        var replacements = new Dictionary<string, string>(StringComparer.OrdinalIgnoreCase)
        {
            {"*wink*", "üòâ"},
            {"*winks*", "üòâ"},
            {"*smile*", "üòä"},
            {"*smiles*", "üòä"},
            {"*laugh*", "üòÇ"},
            {"*laughs*", "üòÇ"},
            {"*giggle*", "ü§≠"},
            {"*giggles*", "ü§≠"},
            {"*blush*", "üò≥"},
            {"*blushes*", "üò≥"},
            {"*nod*", "üòå"},
            {"*nods*", "üòå"},
            {"*sigh*", "üòî"},
            {"*sighs*", "üòî"},
            {"*frown*", "‚òπÔ∏è"},
            {"*frowns*", "‚òπÔ∏è"},
            {"*grin*", "üòÅ"},
            {"*grins*", "üòÅ"},
            // Italian
            {"*sorride*", "üòä"},
            {"*ride*", "üòÇ"},
            {"*occhiolino*", "üòâ"},
            {"*arrossisce*", "üò≥"},
            {"*annuisce*", "üòå"},
            {"*sospira*", "üòî"}
        };

        foreach (var kvp in replacements)
        {
            sb.Replace(kvp.Key, kvp.Value);
        }

        return sb.ToString(); 
    }
}
