    }

    private List<PointNotif> FloatingNotifs = new();

    private void AddFloatingNotif(string text, string cssClass)
    {
        var notif = new PointNotif { Text = text, Class = cssClass };
        FloatingNotifs.Add(notif);
        StateHasChanged();
        
        // Remove after animation
        _ = Task.Delay(1500).ContinueWith(_ => 
        {
            FloatingNotifs.Remove(notif);
            InvokeAsync(StateHasChanged);
        });
    }
