    }
    
    // (API Key logic removed - using hardcoded ApiSecrets.cs)
    
    private bool _shouldScroll = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (_shouldScroll)
        {
            _shouldScroll = false;
            await JS.InvokeVoidAsync("scrollToBottom", "chat-scroll");
        }
    }

    private async Task Enter(KeyboardEventArgs e)
    {
        if (e.Code == "Enter" || e.Code == "NumpadEnter")
        {
            await SendMessage();
        }
    }

    private async Task SendSuggestion(ChatSuggestion suggestion)
    {
        CurrentInput = suggestion.Text;
        await SendMessage(suggestion.Translation);
    }

    private async Task SendMessage(string? translation = null)
    {
        if (string.IsNullOrWhiteSpace(CurrentInput) || SelectedCharacter == null) return;

        var userMsg = CurrentInput;
        CurrentInput = "";
        
        Messages.Add(new ChatMessage { Role = "user", Content = userMsg, Translation = translation });
        
        IsTyping = true;
        CurrentSuggestions.Clear();
        _shouldScroll = true; // Scroll for user message
        StateHasChanged();

        var response = await AIService.GetChatResponseAsync(Messages, SelectedCharacter);
        
        IsTyping = false;
        
            // Handle Points and User Translation
            // Find the SPECIFIC message we just added (it's the last user message)
            var lastUserMsg = Messages.LastOrDefault(m => m.Role == "user");

            if (response.IsCorrect.HasValue)
            {
                // Update user message translation if it's missing
                if (lastUserMsg != null && string.IsNullOrEmpty(lastUserMsg.Translation))
                {
                    lastUserMsg.Translation = response.UserMessageTranslation;
                }

                if (response.IsCorrect.Value)
                {
                    if (lastUserMsg != null) lastUserMsg.Score = 3;
                    var newPoints = await AuthService.UpdatePointsAsync(3);
                    UserPoints = newPoints > 0 ? newPoints : UserPoints + 3; // Fallback for no login
                    PointsAnimationClass = "anim-bump";
                    AddFloatingNotif("+3", "f-plus");
                }
                else 
                {
                    if (lastUserMsg != null) lastUserMsg.Score = -1;
                    var newPoints = await AuthService.UpdatePointsAsync(-1);
                    UserPoints = newPoints >= 0 && AuthService.CurrentUser != null ? newPoints : Math.Max(0, UserPoints - 1);
                    PointsAnimationClass = "anim-shake";
                    AddFloatingNotif("-1", "f-minus");
                }
                StateHasChanged();
                await Task.Delay(1000);
                PointsAnimationClass = "";
            }

        Messages.Add(new ChatMessage { Role = "assistant", Content = response.Message, Translation = response.MessageTranslation });
        CurrentSuggestions = response.Suggestions;
        
        // Trigger TTS (Fire and forget provided UI doesn't block)
        await TTSService.SynthesizeAsync(response.Message, SelectedCharacter.VoiceId);
        
        _shouldScroll = true; // Scroll for bot message
        StateHasChanged();
    }
    
    private string ParseContent(string content)
    {
        if (string.IsNullOrEmpty(content)) return "";

        var sb = new System.Text.StringBuilder(content);
        
        // Common actions to emojis
        var replacements = new Dictionary<string, string>(StringComparer.OrdinalIgnoreCase)
