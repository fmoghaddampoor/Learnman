@page "/tutor"
@using Learnman.Models
@using Learnman.Services
@inject IAITutorService AIService
@inject ITextToSpeechService TTSService
@inject IJSRuntime JS
@inject Learnman.Services.AuthService AuthService
@inject NavigationManager Nav
@rendermode InteractiveServer

<PageTitle>Learnman</PageTitle>

<div class="tutor-container">
    @if (SelectedCharacter == null)
    {
        <div class="character-selection animate-fade-in">
            <h1>Choose Your <span class="text-gradient">Teacher</span></h1>
            <p>Who connects with your desires?</p>
            
            <div class="filter-status">
                @if (FilteredByLanguage)
                {
                    <span class="badge-filter">Filtered by: @TargetLanguage</span>
                }
            </div>

            <div class="char-grid">
                @foreach (var chara in Characters)
                {
                    <div class="char-card" @onclick="() => SelectCharacter(chara)">
                        <img src="@chara.ImageUrl" alt="@chara.Name" class="char-avatar" />
                        <div class="char-info">
                            <h3>@chara.Name</h3>
                            <span class="badge">@chara.Language</span>
                            <span class="badge-accent">@chara.AccentDescription</span>
                            <p>@chara.Bio</p>
                        </div>
                    </div>
                }
                @if (Characters.Count == 0)
                {
                    <p>No teachers available for this language yet.</p>
                }
            </div>
        </div>
    }
    else
    {
        <div class="chat-interface animate-fade-in">
            <div class="chat-header glass-panel">
                <div class="header-info">
                    <button class="btn-back" @onclick="() => SelectedCharacter = null">‚Üê</button>
                    <img src="@SelectedCharacter.ImageUrl" alt="@SelectedCharacter.Name" class="avatar-small" />
                    <div>
                        <h3>@SelectedCharacter.Name</h3>
                        <small>@SelectedCharacter.AccentDescription</small>
                    </div>
                </div>
                <div class="header-points">
                    <div class="points-badge @PointsAnimationClass">
                        <span class="p-star">‚≠ê</span>
                        <span class="p-value">@UserPoints</span>
                    </div>
                </div>
            </div>

            <div class="chat-messages" id="chat-scroll">
                @{ var msgIndex = 0; }
                @foreach (var msg in Messages)
                {
                    var isFirst = msgIndex == 0;
                    <div class="message @(msg.Role == "user" ? "user-msg" : "bot-msg") @(isFirst ? "first-msg" : "")">
                        <div class="msg-bubble glass-panel" data-tooltip="@msg.Translation">
                            @((MarkupString)ParseContent(msg.Content))
                            @if (msg.Role == "user" && msg.Score != 0)
                            {
                                <div class="bubble-points @(msg.Score > 0 ? "plus" : "minus")">
                                    @(msg.Score > 0 ? "+" : "")@msg.Score
                                </div>
                            }
                        </div>
                    </div>
                    msgIndex++;
                }
                @if (IsTyping)
                {
                    <div class="message bot-msg">
                        <div class="msg-bubble glass-panel typing">
                            <span>.</span><span>.</span><span>.</span>
                        </div>
                    </div>
                }
            </div>

            <div class="floating-notifs">
                @foreach (var notif in FloatingNotifs)
                {
                    <div class="f-notif @notif.Class">@notif.Text</div>
                }
            </div>

            @if (CurrentSuggestions.Any() && !IsTyping)
            {
                <div class="chat-suggestions animate-slide-up">
                    @foreach (var suggestion in CurrentSuggestions)
                    {
                        <button class="btn-suggestion" @onclick="() => SendSuggestion(suggestion)" data-tooltip="@suggestion.Translation">@suggestion.Text</button>
                    }
                </div>
            }

            <div class="chat-input glass-panel">
                <input @bind="CurrentInput" @bind:event="oninput" @onkeydown="@Enter" placeholder="Whisper something..." />
                <button class="btn-send" @onclick="() => SendMessage()" disabled="@(string.IsNullOrWhiteSpace(CurrentInput) || IsTyping)">Send</button>
            </div>
        </div>
    }

    
</div>

